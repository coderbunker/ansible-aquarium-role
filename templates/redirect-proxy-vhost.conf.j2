server {
  listen        80 default_server;

  server_name   _;

  root /var/www/html;

  location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root         /var/www/letsencrypt;
  }

  location = /.well-known/acme-challenge/ {
        return 404;
  }

  location / {
        return 301 https://$host$request_uri;
  }
}

